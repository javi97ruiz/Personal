-- Database: Tablas y Operaciones CRUD

-- Tabla de Alumnos
CREATE TABLE IF NOT EXISTS Alumnos (
    id INTEGER PRIMARY KEY,
    nombre TEXT NOT NULL,
    nota REAL NOT NULL
);

-- Operaciones CRUD para la tabla de Alumnos
removeAllAlumnos:
DELETE FROM Alumnos;

selectAllAlumnos:
SELECT * FROM Alumnos;

selectAlumnoById:
SELECT * FROM Alumnos WHERE id = ?;


